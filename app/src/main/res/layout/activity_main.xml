<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.143"/>
    <EditText
            android:id="@+id/edZip"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30047"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.239"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btFind"
            android:background="@drawable/button"
            android:text="find"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClick"

            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.344"/>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="385dp"
                                               android:id="@+id/rvList"
                                               android:layout_height="366dp"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:layout_marginEnd="8dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:layout_marginStart="8dp"
                                               app:layout_constraintHorizontal_bias="0.497"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               android:layout_marginBottom="8dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>